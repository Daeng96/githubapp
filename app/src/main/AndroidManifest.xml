<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dicoding.submission">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.dicoding.submission.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.dicoding.submission.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserBFAA">


        <receiver android:name=".widget.MyWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/my_widget_info" />
        </receiver>

        <service
            android:name=".widget.MyRemoteViewsServices"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <provider
            android:name=".contentprovider.MyContentProvider"
            android:authorities="com.dicoding.submission"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.dicoding.submission.READ_DATABASE"
            android:writePermission="com.dicoding.submission.WRITE_DATABASE" />

        <receiver
            android:name=".alarmnotifications.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" />

        <activity android:name=".view.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SettingsActivity" />
        <activity android:name=".view.DetailUserActivity"/>
        <activity android:name=".view.ListFavoriteActivity" />
        <activity android:name=".view.MainActivity"/>
    </application>

</manifest>